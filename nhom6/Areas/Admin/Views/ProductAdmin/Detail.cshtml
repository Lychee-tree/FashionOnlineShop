@model nhom6.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/adminLayout.cshtml";
}

<style>
    .instock-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-family: Arial, sans-serif;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .instock-table th, .instock-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        .instock-table th {
            background-color: #f2f2f2;
            color: #333;
            font-weight: bold;
        }

        .instock-table tr:nth-child(even) {
            background-color: #fafafa;
        }

        .instock-table tr:hover {
            background-color: #f1f1f1;
        }
</style>
<link href="@Url.Content("~/Areas/Admin/Frontend/css/customdetail.css")" rel="stylesheet">

<section class="shop-details">
    <div class="container">
        <div class="product-layout">
            <!-- Ảnh sản phẩm -->
            <div class="product-image">
                <img src="@Url.Content("~/Content/Image/" + Model.UnitImage)" alt="@Model.ProductName" />
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="product-info">
                <h1>@Model.ProductName</h1>
                <div class="product-price">Giá: <span>@Model.UnitPrice.ToString("N0") VND</span></div>
                <p class="product-description">@Model.UnitDescription</p>

                <h3 style="font-weight:bolder">Thông tin kích thước và màu sắc</h3>

                <!-- Bảng tồn kho -->
                <table class="instock-table">
                    <thead>
                        <tr>
                            <th>Màu sắc</th>
                            <th>Size</th>
                            <th>Tồn kho</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var instock in Model.Instocks)
                        {
                            <tr>
                                <td>@instock.Color.ColorName</td>
                                <td>@instock.Size.SizeName</td>
                                <td>@instock.Instock1</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="@Url.Action("Edit", "ProductAdmin", new { area = "Admin", id = Model.ProductID })" class="buy-button">Edit</a>
                <a href="@Url.Action("list_Product", "ProductAdmin", new { area = "Admin"})" class="buy-button">Trở về danh mục sản phẩm</a>
            </div>
        </div>
    </div>
</section>
