@model IEnumerable<nhom6.Order>

@{
    ViewBag.Title = "Đơn hàng đã chấp nhận";
    Layout = "~/Areas/Admin/Views/Shared/adminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


<h2>Danh sách đơn hàng đã chấp nhận</h2>
<table class="table table-bordered">
    <tr>
        <th>ID đơn hàng</th>
        <th>Tên khách hàng</th>
        @*<th>Ngày đặt</th>*@
        <th>Tổng tiền</th>
        <th>Hình thức thanh toán</th>
        <th>Trạng thái</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.OrderID</td>
            <td>@item.Customer.CustomerName</td>
            @*<td>@item.OrderDate.ToString("yyyy-MM-dd")</td>*@
            <td>@item.TotalPrice VND</td>
            <td>@item.PaidStatu.PaidStatus</td>
            <td>Đã chấp nhận</td>
        </tr>
    }
</table>

<a href="@Url.Action("ListOrder")" class="btn btn-primary">Quay lại danh sách đơn hàng</a>