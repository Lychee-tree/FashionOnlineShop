@model IEnumerable<nhom6.Order>

@{
    ViewBag.Title = "Đơn hàng đã chấp nhận";
    Layout = "~/Areas/Admin/Views/Shared/adminLayout.cshtml";

    // LẤY DANH SÁCH TRẠNG THÁI TỪ ViewBag
    var shippingList = ViewBag.ShippingStatusList as List<nhom6.Shipping_Status>;
    var statusList = ViewBag.PaidStatusList as List<nhom6.PaidStatu>;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        text-align: center;
        text-transform: uppercase;
        font-weight: bold;
        margin-top: 20px;
        margin-bottom: 30px;
    }

    .table th,
    .table td {
        text-align: center;
        vertical-align: middle;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>


<h2>Danh sách đơn hàng đã chấp nhận</h2>
<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID đơn hàng</th>
            <th>Tên khách hàng</th>
            @*<th>Ngày đặt</th>*@
            <th>Tổng tiền</th>
            <th>Hình thức thanh toán</th>
            <th>Trạng thái</th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderID</td>
                <td>@item.Customer.CustomerName</td>
                @*<td>@item.OrderDate.ToString("yyyy-MM-dd")</td>*@
                <td>@item.TotalPrice VND</td>
                <td>
                    <select class="form-select status-dropdown" data-order-id="@item.OrderID">
                        @foreach (var status in statusList)
                        {
                            <option value="@status.PaidStatus" @(item.PaidStatu.PaidStatus == status.PaidStatus ? "selected" : "")>
                                @status.PaidStatus
                            </option>
                        }
                    </select>

                </td>
                <td>
                    <select class="form-select status-dropdown" data-order-id="@item.OrderID">
                        @foreach (var status in shippingList)
                        {
                            <option value="@status.ShippingStatusID" @(item.ShippingStatusID == status.ShippingStatusID ? "selected" : "")>
                                @status.ShippingStatus
                            </option>
                        }
                    </select>
                </td>

            </tr>
        }
</table>

<a href="@Url.Action("ListOrder")" class="btn btn-primary">Quay lại danh sách đơn hàng</a>
<a href="@Url.Action("ConfirmedOrders")" class="btn btn-primary">Đi đến danh sách đơn hàng đã xác nhận</a>