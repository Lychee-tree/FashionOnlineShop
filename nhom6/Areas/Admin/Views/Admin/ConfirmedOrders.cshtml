@model IEnumerable<nhom6.Order>

@{
    ViewBag.Title = "Đơn hàng đã xác nhận";
    Layout = "~/Areas/Admin/Views/Shared/adminLayout.cshtml";
    var shippingList = ViewBag.ShippingStatusList as List<nhom6.Shipping_Status>;
    var statusList = ViewBag.PaidStatusList as List<nhom6.PaidStatu>;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        text-align: center;
        text-transform: uppercase;
        font-weight: bold;
        margin-top: 20px;
        margin-bottom: 30px;
    }

    .table th,
    .table td {
        text-align: center;
        vertical-align: middle;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>

<h2 class="text-center my-4">Đơn hàng đã xác nhận</h2>

<table class="table table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>ID đơn hàng</th>
            <th>Tên KH</th>
            <th>Tổng tiền</th>
            <th>Sản phẩm</th>
            <th>Trạng thái thanh toán</th>
            <th>Trạng thái giao hàng</th>
            <th>Mã vận đơn</th>
            <th>Lưu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Customer.CustomerName</td>
                <td>@order.TotalPrice.ToString("N0") VND</td>
                <td>
                    <ul style="text-align: left">
                        @foreach (var detail in order.OrderDetails)
                        {
                            <li>@detail.Product.ProductName (x@detail.Quantity)</li>
                        }
                    </ul>
                </td>
                <td>
                    <select class="form-select paid-status-dropdown" data-order-id="@order.OrderID">
                        @foreach (var status in statusList)
                        {
                            <option value="@status.PaidStatusID" @(order.PaidStatu.PaidStatusID == status.PaidStatusID ? "selected" : "")>
                                @status.PaidStatus
                            </option>
                        }
                    </select>
                </td>
                <td>
                    <select class="form-select shipping-status-dropdown" data-order-id="@order.OrderID">
                        @foreach (var status in shippingList)
                        {
                            <option value="@status.ShippingStatusID" @(order.ShippingStatusID == status.ShippingStatusID ? "selected" : "")>
                                @status.ShippingStatus
                            </option>
                        }
                    </select>
                </td>
                <td>
                    <input type="text" class="form-control tracking-code-input" data-order-id="@order.OrderID" value="@order.ShippingCode" />
                </td>
                <td>
                    <button class="btn btn-primary btn-save" data-order-id="@order.OrderID">Lưu</button>
                </td>
            </tr>
        }

        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
        $(".btn-save").click(function () {
        var orderId = $(this).data("order-id");
        var shippingCode = $(".tracking-code-input[data-order-id='" + orderId + "']").val();  // Đổi tên biến này thành ShippingCode

        $.ajax({
            url: '@Url.Action("SaveShippingCode", "Admin")',  // Đảm bảo action đúng tên
            type: 'POST',
            data: { id: orderId, code: shippingCode },  // Gửi ShippingCode thay vì TrackingCode
            success: function (response) {
                if (response.success) {
                    alert("Lưu mã vận đơn thành công!");
                } else {
                    alert("Lỗi: " + response.message);
                }
            },
            error: function () {
                alert("Có lỗi xảy ra khi gửi yêu cầu.");
            }
        });
    });

        $(".shipping-status-dropdown").change(function () {
        var orderId = $(this).data("order-id");
        var newShippingStatusId = $(this).val();

        $.ajax({
            url: '@Url.Action("UpdateShippingStatus", "Admin")',
            type: 'POST',
            data: {
                id: orderId,
                shippingStatusId: newShippingStatusId
            },
            success: function (response) {
                if (response.success) {
                    console.log("Cập nhật trạng thái giao hàng thành công!");
                } else {
                    alert("Lỗi: " + response.message);
                }
            },
            error: function () {
                alert("Có lỗi xảy ra khi cập nhật trạng thái giao hàng.");
            }
        });
    });




</script>
<a href="@Url.Action("ListOrder")" class="btn btn-primary">Quay lại danh sách đơn hàng</a>

