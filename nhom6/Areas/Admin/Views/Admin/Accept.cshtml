@model IEnumerable<nhom6.Order>

@{
    ViewBag.Title = "Đơn hàng đã xác nhận";
    Layout = "~/Areas/Admin/Views/Shared/adminLayout.cshtml"; // Sử dụng layout admin của bạn
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">


<div class="container">
    <h2>Danh sách đơn hàng đã xác nhận</h2>
    <table class="table table-bordered">
        <tr>
            <th>ID đơn hàng</th>
            <th>Tên khách hàng</th>
            <th>Ngày đặt</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Tổng tiền</th>
            <th>Hình thức thanh toán</th>
            <th>Trạng thái thanh toán</th>
            <th>Trạng thái giao hàng</th>
            <th>Mã vận đơn</th>
            <th>Cập nhật đơn hàng</th>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.Customer.CustomerName</td>
                <td>@(order.OrderDate != null ? order.OrderDate.Value.ToString("yyyy-MM-dd HH:mm:ss") : "")</td>
                <td>@order.Customer.PhoneNumber</td>
                <td>@order.Customer.Address</td>
                <td>@order.TotalPrice.ToString("N0") VND</td>
                <td>@order.PaidStatu.PaidStatus</td>   <!-- Hình thức thanh toán -->
                <td>@order.PaidStatu.PaidStatus</td><!-- trạng thái thanh toán -->
                <td>@order.ShippingStatusID</td>
                <td>@order.ShippingCode</td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", "Admin", new { id = order.OrderID }, new { @class = "btn btn-detail" })
                </td>
            </tr>
        }
    </table>
</div>
