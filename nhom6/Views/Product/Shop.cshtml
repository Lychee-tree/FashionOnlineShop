@model IEnumerable<nhom6.Product>

@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="shop__sidebar">
                    <div class="shop__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="shop__sidebar__accordion">
                        <div class="accordion" id="accordionExample">
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
                                </div>
                                <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__categories">
                                            <ul class="nice-scroll">
                                                <li><a href="#" class="category-link" data-id="0">Tất cả <span>(@Model.Count())</span></a></li>
                                                @foreach (var category in ViewBag.Categories as List<nhom6.Models.CountModel>)
                                                {
                                                    <li><a href="#" class="category-link" data-id="@category.CategoryID">@category.CategoryName (@category.ProductCount)</a></li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseThree">Filter Price</a>
                                </div>
                                <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__price">
                                            <ul>
                                                <li><a href="#" class="price-link" data-id="0">Tất cả</a></li>
                                                <li><a href="#" class="price-link" data-id="1">Dưới 500.000 VND</a></li>
                                                <li><a href="#" class="price-link" data-id="2">500.000 VND - 1.000.000 VND</a></li>
                                                <li><a href="#" class="price-link" data-id="3">Trên 1.000.000 VND</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseFour">Size</a>
                                </div>
                                <div id="collapseFour" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__size">
                                            <label for="xs">
                                                xs
                                                <input type="radio" id="xs">
                                            </label>
                                            <label for="sm">
                                                s
                                                <input type="radio" id="sm">
                                            </label>
                                            <label for="md">
                                                m
                                                <input type="radio" id="md">
                                            </label>
                                            <label for="xl">
                                                xl
                                                <input type="radio" id="xl">
                                            </label>
                                            <label for="2xl">
                                                2xl
                                                <input type="radio" id="2xl">
                                            </label>
                                            <label for="xxl">
                                                xxl
                                                <input type="radio" id="xxl">
                                            </label>
                                            <label for="3xl">
                                                3xl
                                                <input type="radio" id="3xl">
                                            </label>
                                            <label for="4xl">
                                                4xl
                                                <input type="radio" id="4xl">
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseFive">Colors</a>
                                </div>
                                <div id="collapseFive" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__color">
                                            <label class="c-1" for="sp-1">
                                                <input type="radio" id="sp-1">
                                            </label>
                                            <label class="c-2" for="sp-2">
                                                <input type="radio" id="sp-2">
                                            </label>
                                            <label class="c-3" for="sp-3">
                                                <input type="radio" id="sp-3">
                                            </label>
                                            <label class="c-4" for="sp-4">
                                                <input type="radio" id="sp-4">
                                            </label>
                                            <label class="c-5" for="sp-5">
                                                <input type="radio" id="sp-5">
                                            </label>
                                            <label class="c-6" for="sp-6">
                                                <input type="radio" id="sp-6">
                                            </label>
                                            <label class="c-7" for="sp-7">
                                                <input type="radio" id="sp-7">
                                            </label>
                                            <label class="c-8" for="sp-8">
                                                <input type="radio" id="sp-8">
                                            </label>
                                            <label class="c-9" for="sp-9">
                                                <input type="radio" id="sp-9">
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="shop__product__option">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__left">
                                <p>Showing 1–12 of 126 results</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__right">
                                <p>Sort by Price:</p>
                                <select>
                                    <option value="">Low To High</option>
                                    <option value="">$0 - $55</option>
                                    <option value="">$55 - $100</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row" id="product-list">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="@Url.Content("~/Content/Image/" + item.UnitImage)">
                                    <ul class="product__hover">
                                        <li><a href="#"><i class="fa fa-heart-o" style="color:black;"></i></a></li>
                                        <li>
                                            <a href="#"><i class="fa fa-arrows-h" style="color:black;"></i> <span>Compare</span></a>
                                        </li>
                                        <li><a href="#"><i class="fa fa-search" style="color:black;"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6>@item.ProductName</h6>
                                    <a href="#" class="add-cart">+ Add To Cart</a>
                                    <h5 class="unit-price">@item.UnitPrice</h5>
                                    <div class="product__color__select">
                                        <label for="pc-">
                                            <input type="radio" id="pc-" name="product_color">
                                        </label>
                                        <label class="active black" for="pc-">
                                            <input type="radio" id="pc-" name="product_color">
                                        </label>
                                        <label class="grey" for="pc-">
                                            <input type="radio" id="pc-" name="product_color">
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>}
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__pagination">
                            <a class="active" href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <span>...</span>
                            <a href="#">21</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Lấy danh sách tất cả các liên kết danh mục
        var categoryLinks = document.querySelectorAll(".category-link");

        // Duyệt qua từng liên kết và thêm sự kiện click
        categoryLinks.forEach(function (link) {
            link.addEventListener("click", function (event) {
                event.preventDefault(); // Ngăn chặn load lại trang

                var categoryId = this.getAttribute("data-id"); // Lấy ID danh mục

                // Gửi request AJAX bằng Fetch API
                fetch(`/Product/FilterProducts?categoryId=${categoryId}`)
                    .then(response => response.json()) // Chuyển đổi kết quả sang JSON
                    .then(data => {
                        var productContainer = document.getElementById("product-list");
                        productContainer.innerHTML = "";
                        data.forEach(product => {
                            var productHTML = `
                            <div class="col-lg-4 col-md-6 col-sm-6">
                             <div class="product__item">
                                 <div class="product__item__pic set-bg" data-setbg="${product.ImagePath}">
                                     <ul class="product__hover">
                                         <li><a href="#"><i class="fa fa-heart-o" style="color:black;"></i></a></li>
                                         <li>
                                             <a href="#"><i class="fa fa-arrows-h" style="color:black;"></i> <span>Compare</span></a>
                                         </li>
                                         <li><a href="#"><i class="fa fa-search" style="color:black;"></i></a></li>
                                     </ul>
                                 </div>
                                 <div class="product__item__text">
                                     <h6>${product.ProductName}</h6>
                                     <a href="#" class="add-cart">+ Add To Cart</a>
                                        <h5 class="unit-price">${product.UnitPrice}</h5>
                                     <div class="product__color__select">
                                         <label for="pc-">
                                             <input type="radio" id="pc-" name="product_color">
                                         </label>
                                         <label class="active black" for="pc-">
                                             <input type="radio" id="pc-" name="product_color">
                                         </label>
                                         <label class="grey" for="pc-">
                                             <input type="radio" id="pc-" name="product_color">
                                         </label>
                                     </div>
                                 </div>
                             </div>
                         </div>`; 

                            productContainer.insertAdjacentHTML("beforeend", productHTML);
                        });
                        document.dispatchEvent(new Event("filterUpdated"));
                    })
                    .catch(error => console.error("Lỗi:", error));
            });
        });
    });
    
</script>
