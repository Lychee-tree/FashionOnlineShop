
@{
    ViewBag.Title = "ProductsByColor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Sản phẩm theo màu: @ViewBag.ColorName</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@Url.Content("~/Content/Image/Color2/" + product.UnitImage)">
                            <ul class="product__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6><a href="@Url.Action("ProductDetails", "Product", new { id = product.ProductID })">@product.ProductName</a></h6>
                            <h5>@product.UnitPrice.ToString("C")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>