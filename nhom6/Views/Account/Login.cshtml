@model nhom6.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- CSS giống giao diện Đăng ký -->
<style>
    .login-popup {
        max-width: 500px;
        margin: 80px auto;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        animation: fadeIn 0.5s ease-in-out;
    }

 

    body {
        background: linear-gradient(to right, #e0eafc, #cfdef3);
        min-height: 100vh;
    }

    h2 {
        text-align: center;
        margin-bottom: 25px;
        font-weight: bold;
    }

    .btn-submit {
        width: 100%;
        background-color: #6c757d;
        color: white;
        border: none;
        border-radius: 10px;
        padding: 10px;
        transition: background 0.3s ease;
    }

    .btn-submit:hover {
        background-color: #5a6268;
    }

    label {
        font-weight: bold;
    }
</style>

<div class="login-popup">
    <h2>Đăng nhập</h2>
    @if (TempData["AlreadyRegistered"] != null)
    {
        <div class="alert alert-warning text-center">
            @TempData["AlreadyRegistered"]
        </div>
    }

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.userName, "Tên người dùng", htmlAttributes: new { @class = "fw-bold" })
            @Html.TextBoxFor(m => m.userName, new { @class = "form-control", placeholder = "Nhập tên người dùng" })
            @Html.ValidationMessageFor(m => m.userName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(m => m.userPass, "Mật khẩu", htmlAttributes: new { @class = "fw-bold" })
            @Html.PasswordFor(m => m.userPass, new { @class = "form-control", placeholder = "Mật khẩu" })
            @Html.ValidationMessageFor(m => m.userPass, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-submit mt-3">Đăng nhập</button>
        <div class="text-center mt-3">
            <span>Chưa có tài khoản? </span>
            <a href="@Url.Action("Register", "Account")">Đăng ký ngay</a>
        </div>

        <div class="text-center mt-2">
            <a href="#">Quên mật khẩu?</a> <!-- sau này bạn có thể dẫn đến /Account/ForgotPassword -->
        </div>

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
